<idea-plugin version="2">
    <id>com.romainpiel.androidpermissionsusage</id>
    <name>Android Permissions Usage</name>
    <version>1.0</version>
    <vendor email="contact@romainpiel.com" url="https://github.com/RomainPiel/AndroidPermissionsUsage">Romain Piel</vendor>

  <description><![CDATA[
      IntelliJ IDEA Plugin for Android to find the usages of your the permission declared by your app.<br>
      Note that this doesn't do perfectly what it should do. See the <a href="https://github.com/RomainPiel/AndroidPermissionsUsage/blob/master/README.md">README</a> for more information.
    ]]></description>

  <change-notes><![CDATA[

    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
      <action id="AndroidPermissions.FindUsage" class="com.romainpiel.androidpermissionsusage.FindPermissionsUsageAction">
          <add-to-group group-id="ProjectViewPopupMenu"/>
      </action>
  </actions>

</idea-plugin>